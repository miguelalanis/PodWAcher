---
import DefaultLayout from '../layouts/DefaultLayout.astro';
---
<DefaultLayout title="Astro PWA">
    <main class="player">
		<div class="imgbox">
			<img class="portada" src="../web_reactiva_223.jpg" alt="Webreactiva #223">
		</div>
		<audio src="/public/audio/web_reactiva_223.mp3" controls></audio>
	</main>
</DefaultLayout>

<style>
	*{
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}
	html,
	body {
		font-family: system-ui;
		display: flex;
		justify-content: center;
		align-items: center;
		min-height: 100vh;
		width: -webkit-fill-available;
		background: linear-gradient(to right, #E56A54, #A1588A);
	}
	.player{
		position: absolute;
		width: 300px;
		background: #f1f3f4;
		border-radius: 20px;
		box-shadow: 0 50px 80px rgba(0,0, 0, 0.5);
	}
	.player .imgbox{
		position: relative;
		width: 100%;
		height: 300px;
	}
	.player .imgbox img{
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		object-fit: cover;
		border-top-left-radius: 20px;
		border-top-right-radius: 20px;
	}
	.player audio{
		width: 100%;
		outline: none; 
	}
	h1{
		background: none;
	}
</style>